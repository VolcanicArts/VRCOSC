<UserControl x:Class="VRCOSC.App.UI.Views.Nodes.NodeCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1280"
             Focusable="True">
    <Grid x:Name="RootContainer"
        Background="{DynamicResource CBackground2}"
        Width="10000" Height="10000"
        HorizontalAlignment="Center" VerticalAlignment="Center"
        MouseDown="RootContainer_OnMouseDown"
        MouseUp="RootContainer_OnMouseUp"
        MouseMove="RootContainer_OnMouseMove">
        <Grid x:Name="CanvasContainer"
              Background="Transparent"
              Width="5000" Height="5000"
              HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RenderTransform>
                <TranslateTransform/>
            </Grid.RenderTransform>
            <Canvas x:Name="RootCanvas" />
            <ItemsControl
                x:Name="NodesItemsControl"
                ItemsSource="{Binding NodeField.Nodes, Mode=OneWay}"
                Background="Transparent"
                MouseMove="NodesItemsControl_OnMouseMove"
                MouseUp="NodesItemsControl_OnMouseUp">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <!--> Node <-->
                    <DataTemplate>
                        <Border Name="NodeContainer"
                                Background="{DynamicResource CBackground4}"
                                CornerRadius="10"
                                BorderThickness="1"
                                BorderBrush="{DynamicResource CForeground3}"
                                Width="200" Height="100"
                                HorizontalAlignment="Left" VerticalAlignment="Top"
                                Tag="{Binding Value}"
                                MouseDown="NodeContainer_OnMouseDown">
                            <Border.RenderTransform>
                                <TranslateTransform X="{Binding Value.Position.X}" Y="{Binding Value.Position.Y}"/>
                            </Border.RenderTransform>
                            <!--> Node Content <-->
                            <Grid>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>