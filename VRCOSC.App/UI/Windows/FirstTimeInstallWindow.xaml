<Window x:Class="VRCOSC.App.UI.Windows.FirstTimeInstallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:core="clr-namespace:VRCOSC.App.UI.Core"
        mc:Ignorable="d"
        Title="Welcome to VRCOSC V2" Width="750" Height="400"
        ResizeMode="NoResize">
    <Border Background="{DynamicResource CBackground2}" Padding="40">
        <core:SpacedStackPanel Spacing="20" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to VRCOSC" Foreground="{DynamicResource CForeground1}" FontSize="40" TextAlignment="Center"/>
            <TextBlock Text="If you need help with setting up the modules, ChatBox, or any other general support with the app, join the Discord server!" Foreground="{DynamicResource CForeground1}" FontSize="20" HorizontalAlignment="Center" TextWrapping="WrapWithOverflow" TextAlignment="Center"/>
            <core:IconButton Icon="Brands_Discord" Width="100" Height="100" ButtonColour="Gray" CornerRadius="15" Click="Discord_Click"/>
        </core:SpacedStackPanel>
    </Border>
</Window>