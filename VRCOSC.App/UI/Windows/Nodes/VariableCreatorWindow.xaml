<Window x:Class="VRCOSC.App.UI.Windows.Nodes.VariableCreatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:core="clr-namespace:VRCOSC.App.UI.Core"
        mc:Ignorable="d"
        Height="230" Width="450"
        Background="{DynamicResource CBackground2}"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <core:SpacedStackPanel Grid.Row="0" Spacing="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Name:" FontWeight="SemiBold" Foreground="{DynamicResource CForeground1}" FontSize="20"/>
                <TextBox Grid.Column="1" FontSize="20" Text="{Binding VariableName}"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Persistent:" FontWeight="SemiBold" Foreground="{DynamicResource CForeground1}" FontSize="20"/>
                <core:VRCOSCCheckBox Grid.Column="1" IsChecked="{Binding VariablePersistent}" Checked="ToggleButton_OnChanged" Unchecked="ToggleButton_OnChanged" Height="25" Width="25"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Type:" Foreground="{DynamicResource CForeground1}" FontSize="20" FontWeight="SemiBold"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="GenericArgumentText" Height="30" FontSize="20" TextChanged="GenericArgumentText_OnTextChanged" KeyDown="GenericArgumentText_OnKeyDown"/>
                <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" x:Name="FormedTypeText" Foreground="{DynamicResource CForeground2}" FontSize="18" FontWeight="SemiBold"/>
            </Grid>
            <core:TextButton x:Name="CreateNodeButton" Text="Create Variable" ButtonColour="Blue" Height="25" FontSize="18" VerticalAlignment="Top" Foreground="{DynamicResource CForeground1}"
                             Click="CreateNodeButton_OnClick"/>
        </core:SpacedStackPanel>
    </Grid>
</Window>