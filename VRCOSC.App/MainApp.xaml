<Application x:Class="VRCOSC.App.MainApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:themes="clr-namespace:VRCOSC.App.UI.Themes">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <themes:ThemeResourceDictionary/>
                <ResourceDictionary Source="UI/Styles/VRCOSCCheckBoxStyle.xaml" />
                <ResourceDictionary Source="UI/Styles/VRCOSCButtonStyle.xaml" />
                <ResourceDictionary Source="UI/Styles/IconButtonStyle.xaml" />
                <ResourceDictionary Source="UI/Styles/TextButtonStyle.xaml" />
                <ResourceDictionary Source="UI/Styles/TextBoxStyle.xaml" />
                <ResourceDictionary Source="UI/Styles/HeaderFooterListViewStyle.xaml" />
                <ResourceDictionary Source="UI/Styles/SpacedListView.xaml" />
                <ResourceDictionary Source="UI/Styles/TitleDescriptionContentStyle.xaml" />
                <ResourceDictionary Source="UI/Styles/KeybindPickerStyle.xaml" />
                <ResourceDictionary Source="UI/Styles/VRCOSCSliderStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="PasswordBox" BasedOn="{StaticResource {x:Type PasswordBox}}">
                <Setter Property="InputMethod.IsInputMethodEnabled" Value="False"/>
                <Setter Property="InputMethod.IsInputMethodSuspended" Value="True"/>
            </Style>
            <Style TargetType="RichTextBox" BasedOn="{StaticResource {x:Type RichTextBox}}">
                <Setter Property="InputMethod.IsInputMethodEnabled" Value="False"/>
                <Setter Property="InputMethod.IsInputMethodSuspended" Value="True"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>